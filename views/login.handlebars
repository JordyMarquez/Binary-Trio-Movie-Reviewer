<div class="columns ml-6 mt-3 has-text-dark">
  <div class="field ml-6">
    <h2>Login</h2>

    <form class="login-form mt-2">
      <div class="">
        <label for="email-login">email:</label>
        <input class="input is-small mt-1" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="input is-small mt-1" type="password" id="password-login" />
      </div>
      <div class="mt-2">
        <button class="button is-light is-info" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="field pl-6">
    <h2>Signup</h2>

    <form class="signup-form mt-2">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="input is-small mt-1" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="input is-small mt-1" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="input is-small mt-1" type="password" id="password-signup" placeholder="Min 8 Characters" />
      </div>
      <div class="mt-2">
        <button class="button is-light is-info" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>
