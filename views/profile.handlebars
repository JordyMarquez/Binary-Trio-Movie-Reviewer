<div class="columns mx-6 mt-3 has-text-dark has-text-centered">
</div>

<div class="ml-6 field">
  <div class="col-md-6">
    <h3>Leave a Movie Review for {{title}}:</h3>

    <form class="form new-project-form">
      {{!-- <div class="form-group">
        <label for="project-name">Review Name:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div> --}}
      <div class="mt-2">
        <label for="project-funding">Rating out of 5 ⭐️</label>
        <input class="input is-small mt-1" type="number" id="movie-rating" name="movie-rating" min="0" max="5"/>
      </div>
      <div class="mt-2">
        <label for="project-desc">Review:</label>
        <textarea class="input is-small mt-1" id="movie-comments" name="movie-comments"></textarea>
      </div>
      <div class="mt-2">
        <button type="submit" class="btn btn-primary">Create</button>
      </div> 
    </form>
  </div>

 
  <div class="col-md-6 project-list">
    <h3>Current movies:</h3>

    {{#each reviews as |review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{review.comments}}</h4>
      </div>
      <h4>{{movie.genre}}, {{movie.year}}</h4>
      <div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger project-delete" data-id="{{review.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/profile.js"></script>
